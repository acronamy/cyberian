<!DOCTYPE html>
<html>

<head>

</head>

<body class=" page-login">

    <template id="login">
        <div class="overlay"></div>
        <div class="col-xs-12 wrapper wrapper-login">
            <div class="row">
                <div class="col-xs-8 col-center clearfix">
                    <div class="wrapper login pos-vert clearfix">
                        <form>
                            <!--AVATAR-->
                            <div class="avatar pull-left">
                                <div class="avatar-inner"></div>
                            </div>
                            <div class="form-group pull-left">
                                <label id="returning-user-name" class="h1 user-name hide returning-user-ctrl"></label>
                                <button id="returning-user-name-cancel" type="button" class="close hide returning-user-ctrl" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>

                                <div class="input-group hide" id="username-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                    <input id="username" placeholder="Username" class="form-control" type="text" />
                                    
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-menu-right">
                                    </div>
                                </div>

                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                                    <input id="password" placeholder="Password" class="form-control mousetrap" type="password" />
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-menu-right"></span></div>
                                </div>
                            </div>

                            <a class="text-muted pull-right" href="/user/register">Create Account</a>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="register">
        <div class="overlay"></div>
        <div class="col-xs-12 wrapper wrapper-register">
            <div class="row">
                <div class="col-xs-8 col-center clearfix">
                    <div class="wrapper login pos-vert clearfix">
                        <h1>Welcome</h1>
                        <form>
                            <!--About you-->
                            <div class="form-group pull-left">
                                <h4>About you</h4>
                                <div class="input-group" id="username-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                    <input required id="first_name" placeholder="First name" class="form-control" type="text" />
                                </div>

                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                    <input required id="last_name" placeholder="Last Name" class="form-control" type="text" />
                                </div>

                                <textarea rows="5" required id="bio" placeholder="Bio" class="form-control"></textarea>

                                <div class="input-group toggle-group">
                                    <small class="hire-status">
                                        <span class="hire-status-true">You are for hire!</span>
                                        <span class="hire-status-false hide">You are not for hire.</span>
                                    </small>
                                    <label data-toggle="data-toggle" id="for-hire-toggle">
                                        <input checked type="checkbox" id="for-hire"/>
                                        <div class="inner"></div>
                                    </label>
                                    
                                </div>
                            </div>
                            <!--User details-->
                            <div class="form-group pull-left">
                                <h4>Account</h4>
                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
                                    <input required id="email" placeholder="Email" class="form-control" type="email" />
                                </div>

                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-tree-conifer"></span></div>
                                    <input required id="username" placeholder="Username" class="form-control" type="text" />
                                </div>

                                <div class="input-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                                    <input required id="password" placeholder="Password" class="form-control" type="password" />
                                </div>

                            </div>

                            <div class="form-group control-group clearfix">
                                <button id="submit" type="button" class="btn-block btn btn-primary">Sign Up</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </template>

</body>

</html>